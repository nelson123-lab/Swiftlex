{
    "manifest_version": 2,
    "name": "Word Meaning Extension",
    "version": "1.0",
    "description": "Select a word to find its meaning",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  